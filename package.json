{
  "name": "sns-registration-app",
  "version": "2.0.0",
  "description": "Future-proof SNS registration platform with advanced admin panel",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "start": "node server/index.js",
    "test": "jest",
    "security-audit": "npm audit && snyk test",
    "db:migrate": "node server/scripts/migrate.js",
    "db:seed": "node server/scripts/seed.js"
  },
  "dependencies": {
    "@solana/web3.js": "^1.91.6",
    "@bonfida/spl-name-service": "^3.0.12",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "knex": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "express-validator": "^7.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "copy-webpack-plugin": "^11.0.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "snyk": "^1.1244.0"
  }
}
